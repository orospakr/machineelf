<h1>Listing towns</h1>

<table>
  <tr>
    <th>Island</th>
    <th>Updated at</th>
    <th>Name</th>
    <th>Owner</th>
  </tr>

<% for town in @towns %>
  <tr>
    <td><%=link_to town.island.name, edit_island_path(town.island) %></td>
    <td><%=h town.updated_at %></td>
    <td><%=h town.name %></td>
    <td><%=link_to town.player.ikariam_login, edit_player_path(town.player) %></td>
    <td><%= link_to 'Show', town %></td>
    <td><%= link_to 'Edit', edit_town_path(town) %></td>
    <td><%= link_to 'Destroy', town, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

